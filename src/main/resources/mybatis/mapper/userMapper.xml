<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="online.forgame.wechat_pay.mapper.UserMapper">
    <select id="findByOpenId" resultType="User">
        SELECT *
        FROM user
        WHERE openid = #{openid};
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (openid, name, head_img, phone, sign, sex, city, create_time)
        VALUES (#{openid}, #{ name}, #{ headImg}, #{ phone}, #{sign}, #{sex}, #{city}, #{createTime})
    </insert>
</mapper>